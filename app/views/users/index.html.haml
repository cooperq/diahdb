%h1 Listing users

%table
  %thead
    %tr
      %th Username
      %th Email
      %th Password
      %th Age
      %th Location
      %th About
      %th{ :colspan => 3 }
  
  %tbody
    - for user in @users
      %tr{ :class => cycle(:odd, :even) }
        %td= user.username
        %td= user.email
        %td= user.password
        %td= user.age
        %td= user.location
        %td= user.about
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete

%br
= link_to 'New user', new_user_path
