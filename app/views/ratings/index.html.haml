%h1 Listing ratings

%table
  %thead
    %tr
      %th Score
      %th{ :colspan => 3 }
  
  %tbody
    - for rating in @ratings
      %tr{ :class => cycle(:odd, :even) }
        %td= rating.score
        %td= link_to 'Show', rating
        %td= link_to 'Edit', edit_rating_path(rating)
        %td= link_to 'Destroy', rating, :confirm => 'Are you sure?', :method => :delete

%br
= link_to 'New rating', new_rating_path
